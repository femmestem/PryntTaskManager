<div class="row tasks">
    <h1>Tasks List</h1>
    <div class="row">
        
    <%= link_to "+ New Task", new_task_path, class: "button radius" %>
    </div>
    <div class="row">
        
    <% @tasks.each do |task| %>
    <div class="task-item vcard">
        <div class="task-item">
            <h2><%= task.title %></h2>
            <%= link_to "See Details", task_path(task) %>
            <p>Created by <%= task.creator.email %></p>
            </ul>
        </div>
    </div>
    <% end %>
    </div>
</div>
