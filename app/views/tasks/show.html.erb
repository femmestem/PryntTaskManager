<%= link_to "Return to Tasks List", tasks_path %>

<div class="task-item">

    <h2><%= @task.title %></h2>
    <h3>Description:</h3>
    <%= @task.description %></p>
    <p>Creator: <%= @task.creator.email %></p>
    <p><%= button_to "Assign To Me", "#" %></p>
    <h3>Assigned to:</h3>
    <% if @task.assignees.empty? %>
    <p>Task is not yet assigned to anyone.</p>
    <% end %>
    <ul>
    <% @task.assignees.each do |assignee| %>
    <li><%= assignee.email %></li>
    <% end %>
    </ul>
</div>
